        <%= form.text_field :description, placeholder: 'Descrição', class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.text_field :image_url, placeholder: 'Imagem URL', class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.text_field :local, placeholder: 'Local', class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.text_field :day, placeholder: 'Data (AAAA-MM-DD HH:MM:SS)', class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.text_field :organization, placeholder: 'Organização', class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.text_area :body, placeholder: 'Informações', class: 'form-control' %>
      </div>
