<div class="blocktext">

<%= form_with(model: event, local: true) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.text_field :title, placeholder: 'Título', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.text_field :description, placeholder: 'Descrição', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.text_field :image_url, placeholder: 'Imagem URL', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.text_field :local, placeholder: 'Local', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.text_field :day, placeholder: 'Data', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.text_field :organization, placeholder: 'Organização', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.text_area :body, placeholder: 'Informações', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.submit "Criar Evento", class: "btn btn-primary btn-block btn-lg" %>
  </div>
<% end %>
</div>
